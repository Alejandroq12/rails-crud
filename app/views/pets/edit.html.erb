<h1>Edit Pet</h1>

<%= form_with model: @pet, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%=  form.label :age %>
    <% form.text_area :age %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description%>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>